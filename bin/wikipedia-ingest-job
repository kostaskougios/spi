
echo "removing target dir"

hdfs dfs -rmdir /wikipedia/serialized

echo "submitting spark job"

JAR=target/wikipedia.jar

spark-submit --class com.aktit.wikipedia.IngestWikipediaJob \
	--driver-memory 1g \
	--executor-memory 8g \
	--conf spark.executor.memoryOverhead=768 \
	--executor-cores 8 \
	--num-executors 1 \
	--master yarn-cluster \
	--conf spark.src=/wikipedia/src/articles.A-B/3_Biotech \
	--conf spark.out=/wikipedia/serialized \
	--conf spark.local.dir=/tmp \
	$JAR
