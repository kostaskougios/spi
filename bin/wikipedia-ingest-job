
echo "removing target dir"

hdfs dfs -rm -r -f /wikipedia/serialized

echo "submitting spark job"

JAR=target/wikipedia.jar

spark-submit --class com.aktit.wikipedia.IngestWikipediaJob \
	--driver-memory 1g \
	--executor-memory 8g \
	--conf spark.executor.memoryOverhead=2048 \
	--executor-cores 16 \
	--num-executors 1 \
	--master yarn \
	--deploy-mode cluster \
	--conf spark.src=/wikipedia/src \
	--conf spark.out=/wikipedia/serialized \
	--conf spark.local.dir=/tmp \
	$JAR
